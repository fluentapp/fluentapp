{
    "name": "fluentapp/analytics-api",
    "description": "Fluent Analytics API endpoints",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "slim-framework",
        "skeleton",
        "slim",
        "slim4",
        "apache"
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "cakephp/chronos": "^2",
        "cakephp/database": "^4",
        "cakephp/validation": "^4.4",
        "fig/http-message-util": "^1.1",
        "foroco/php-browser-detection": "^2.7",
        "monolog/monolog": "^3",
        "nyholm/psr7": "^1.4",
        "nyholm/psr7-server": "^1.0",
        "php-di/php-di": "^6 || ^7",
        "selective/array-reader": "^2.0",
        "selective/basepath": "^2",
        "selective/validation": "^2.0",
        "slim/slim": "^4",
        "symfony/uid": "^6",
        "symfony/validator": "^6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3",
        "mikey179/vfsstream": "^1.6",
        "phpstan/phpstan": "1.*",
                "phing/phing": "^2.17",

        "phpunit/phpunit": "^8 || ^9",
        "selective/test-traits": "^2",
        "squizlabs/php_codesniffer": "^3",
        "symfony/console": "6.0.*",
        "symfony/event-dispatcher": "6.0.*",
        "symfony/filesystem": "6.0.*",
        "symfony/finder": "6.0.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "cs:check": "php-cs-fixer fix --dry-run --format=txt --verbose --diff --config=.cs.php --ansi",
        "cs:fix": "php-cs-fixer fix --config=.cs.php --ansi",
        "sniffer:check": "phpcs --standard=phpcs.xml",
        "sniffer:fix": "phpcbf --standard=phpcs.xml",
        "stan": "phpstan analyse -c phpstan.neon --no-progress --ansi --xdebug",
        "start": "php -S localhost:8088 -t public/",
        "test": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always",
        "test:all": [
            "@cs:check",
            "@sniffer:check",
            "@stan",
            "@test"
        ],
        "test:coverage": "php -d xdebug.mode=coverage -r \"require 'vendor/bin/phpunit';\" -- --configuration phpunit.xml --do-not-cache-result --colors=always --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
